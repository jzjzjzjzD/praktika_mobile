<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back"
        android:contentDescription="Назад"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <EditText
        android:id="@+id/productNameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Название товара"
        android:background="@drawable/edittext_bg"
        android:padding="12dp"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/productQuantityEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Количество"
        android:background="@drawable/edittext_bg"
        android:padding="12dp"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/productNameEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/productLocationEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Местоположение"
        android:background="@drawable/edittext_bg"
        android:padding="12dp"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/productQuantityEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:elevation="4dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/productLocationEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>